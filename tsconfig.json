{
    "compilerOptions": {
        "target": "esNext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@common/*": ["src/components/common/*"],
            "@context/*": ["src/context/*"],
            "@hooks/*": ["src/hooks/*"],
            "@styles/*": ["src/styles/*"],
            "@styles": ["src/styles/*"],
            "@constants/*": ["src/constants/*"],
            "@utils/*": ["src/utils/*"],
            "@apis/*": ["src/apis/*"],
            "@redux/*": ["src/redux/*"],
            "@static/*": ["src/svgs/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "stories"],
    "exclude": ["node_modules"]
}
